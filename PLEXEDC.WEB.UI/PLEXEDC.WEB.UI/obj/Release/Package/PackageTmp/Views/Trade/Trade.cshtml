@model PLEXEDC.WEB.UI.Models.TradeViewModel

@{
    ViewBag.Title = "Trade";
}

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-group" role="tablist">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-custom clearfix" role="tab" id="headingOne">
                    <h4 class="panel-title pull-left">
                        Stock Price
                    </h4>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading panel-heading-custom">
                                <h6>Stock Palette</h6>
                            </div>
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label for="market">Market</label>
                                        <select>
                                            <option>NSE</option>
                                            <option>GES</option>
                                            <option>BRVN</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label for="symbol">Symbol</label>
                                        <select name="symbol">
                                            <option>FSDH</option>
                                            <option>GES</option>
                                            <option>BRVN</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading panel-heading-custom">
                                <h6>Stock Properties</h6>
                            </div>
                            <div class="panel-body">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading panel-heading-custom">
                        <h6>Transactions</h6>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item"><a href="">Trade</a> </li>
                            <li class="list-group-item"><a href="#">Transfer Funds</a></li>
                            <li class="list-group-item"><a href="#">Transaction History</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading panel-heading-custom">
                        <h6>Downloads</h6>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item"><a href="">Trade Templates</a> </li>
                            <li class="list-group-item"><a href="#">Trade Forms</a></li>
                            <li class="list-group-item"><a href="#">Registration Forms</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-custom">
                    <h6>Tradable Stock Listing</h6>
                </div>
                <div class="panel-body">
                    <div id="tradeStatus" class="table-responsive" style="height:200px; overflow-y:auto; width: 100%;">
                        @Html.Partial("_TradableStockListing")
                    </div>
                </div>
            </div>
        </div>




    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-custom">
                <h6>Open trade</h6>
            </div>
            <div class="panel-body">
                <div id="tradeStatus" class="table-responsive" style="overflow:auto">
                    @Html.Partial("_OpenOrderView")
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-custom">
                <h6>Pending Trade</h6>
            </div>
            <div class="panel-body">
                <div id="tradeStatus" class="table-responsive" style="overflow:auto">
                    @*@Html.Partial("_OpenOrderView")*@
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-custom">
                <h6>Cancelled Trade</h6>
            </div>
            <div class="panel-body">
                <div id="tradeStatus" class="table-responsive" style="overflow:auto">
                    @*@Html.Partial("_OpenOrderView")*@
                </div>
            </div>
        </div>
    </div>
</div>

